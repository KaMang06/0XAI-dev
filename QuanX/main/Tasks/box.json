{
  "id": "caiyun_weather_cfg",
  "name": "彩云天气 v2.7.2 配置面板",
  "desc": "自动定位｜预警｜降雨提醒｜睡前预报｜AI 摘要（支持第三方代理 & gpt-4）",
  "icon": "https://raw.githubusercontent.com/58xinian/icon/master/Weather/CLEAR_DAY.gif",
  "author": "@Peng-Ym @0xAI",
  "repo": "https://github.com/0xAI-dev/QuanX",
  "apps": [
    {
      "id": "caiyun_app",
      "name": "彩云天气",
      "keys": [
        "caiyun_token",
        "tencent_token",
        "display_location",
        "rain_reminded",
        "bedtime_done",
        "alerted",
        "rain_reminder",
        "bedtime_forecast",
        "merge_notify",
        "ai_switch",
        "openai_key",
        "ai_proxy",
        "ai_model"
      ],
      "settings": [
        {
          "id": "display_location",
          "name": "调试模式",
          "type": "boolean",
          "default": false
        },
        {
          "id": "rain_reminder",
          "name": "降雨提醒",
          "type": "boolean",
          "default": true
        },
        {
          "id": "bedtime_forecast",
          "name": "睡前预报",
          "type": "boolean",
          "default": true
        },
        {
          "id": "merge_notify",
          "name": "合并通知（实时+今日）",
          "type": "boolean",
          "default": true
        },
        {
          "id": "ai_switch",
          "name": "AI 摘要开关",
          "type": "boolean",
          "default": true
        },
        {
          "id": "caiyun_token",
          "name": "彩云令牌",
          "type": "string",
          "placeholder": "CY 开头 32 位字符串"
        },
        {
          "id": "tencent_token",
          "name": "腾讯地图 Key",
          "type": "string",
          "placeholder": "腾讯位置服务 Key"
        },
        {
          "id": "openai_key",
          "name": "OpenAI Key（可选）",
          "type": "string",
          "placeholder": "sk-xxx，留空则不启用 AI 摘要"
        },
        {
          "id": "ai_proxy",
          "name": "第三方代理地址",
          "type": "string",
          "default": "https://api.openai-hub.com/v1/chat/completions"
        },
        {
          "id": "ai_model",
          "name": "模型名称",
          "type": "string",
          "default": "gpt-4"
        }
      ]
    }
  ]
}
